  training:
    parameters:
      runMode: {type: string, default: 'default'}
      userInput: {type: string, default: '{}'}
      userId: {type: string, default: 'defaultUser'}
      modelId: {type: string, default: 'defaultModel'}
      productName: {type: string, default: 'defaultProduct'}
      deploymentName: {type: string, default: 'defaultDeployment'}
      apiVersion: {type: string, default: 'defaultVersion'}
      subscriptionId: {type: string, default: 'defaultSubscription'}
    command: "python src/luna_publish/train.py --runMode {runMode} --userInput {userInput} --userId {userId} --modelId {modelId} --productName {productName} --deploymentName {deploymentName} --apiVersion {apiVersion} --subscriptionId {subscriptionId}"
  batchinference:
    parameters:
      runMode: {type: string, default: 'default'}
      userInput: {type: string, default: '{}'}
      operationId: {type: string, default: 'defaultOperation'}
      modelId: {type: string, default: 'defaultModel'}
    command: "python src/luna_publish/batchinference.py --runMode {runMode} --userInput {userInput} --operationId {operationId} -modelId {modelId}"
  deployment:
    parameters:
      runMode: {type: string, default: 'default'}
      userInput: {type: string, default: '{"dns_name_label":"mlflowtest"}'}
      endpointId: {type: string, default: 'defaultendpoint'}
      userId: {type: string, default: 'defaultUser'}
      modelId: {type: string, default: 'defaultModel'}
      productName: {type: string, default: 'defaultProduct'}
      deploymentName: {type: string, default: 'defaultDeployment'}
      apiVersion: {type: string, default: 'defaultVersion'}
      subscriptionId: {type: string, default: 'defaultSubscription'}
    command: "python src/luna_publish/train.py --runMode {runMode} --userInput {userInput} --endpointId {endpointId} --userId {userId} --modelId {modelId} --productName {productName} --deploymentName {deploymentName} --apiVersion {apiVersion} --subscriptionId {subscriptionId}"